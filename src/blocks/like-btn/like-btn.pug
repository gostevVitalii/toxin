//- Все примеси в этом файле должны начинаться c имени блока (like-btn)

mixin like-btn(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +like-btn('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' like-btn--' + modsList[i].trim();
      }
    }

  .like-btn(class=allMods)&attributes(attributes)
    .like-btn__inner
      block
